<%= full_width_tabs do %>
  <%= active_dd(!contact_us_failure) do %>
    <%= tab_for :home %>
  <% end %>
  <% additional_tabs do |id| %>
    <dd><%= tab_for id %></dd>
  <% end %>
  <%= active_dd(contact_us_failure) do %>
    <%= tab_for :contactUs %>
  <% end %>
  <dd class="hide-for-small"><%= tab_for :documents %></dd>
<% end %>
<ul class="tabs-content">
  <%= partial_in_tab :home, (contact_us_failure ? nil : :active) %>
  <% additional_tabs do |id| %>
    <%= partial_in_tab id %>
  <% end %>
  <%= partial_in_tab :contactUs, (contact_us_failure ? :active : nil) %>
  <%= partial_in_tab :documents %>
</ul>
