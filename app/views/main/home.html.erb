<%= eight_columns_centered do %>
  <dl class="tabs">
    <%= active_dd(!contact_us_failure) do %>
      <%= tab_for :home %>
    <% end %>
    <dd><%= tab_for :whoWeAre %></dd>
    <%= active_dd(contact_us_failure) do %>
      <%= tab_for :contactUs %>
    <% end %>
    <dd class="hide-for-small"><%= tab_for :documents %></dd>
  </dl>
<% end %>
<ul class="tabs-content">
  <%= partial_in_tab :home, nil, (contact_us_failure ? nil : :active) %>
  <%= partial_in_tab :whoWeAre %>
  <%= partial_in_tab :contactUs, 'contact_us', (contact_us_failure ? :active : nil) %>
  <%= partial_in_tab :documents, 'documents' %>
</ul>
